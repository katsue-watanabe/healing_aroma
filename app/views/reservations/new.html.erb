<!-- new.html.erb -->
<div class="reservation-new">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center title">
        <h1>新規予約画面</h1>
      </div>
      <div class="col-12 mt-3 content">
        <%= form_with model: @reservation, local: true, class: 'form' do |form| %>
        <%= render 'layouts/error_messages', model: form.object %>
        <div class="day form-group">
          <%= form.label :day, '日付' %>
          <%= form.text_field :day, class: 'form-control', value: @day, readonly: true %>
        </div>
        <div class="time form-group">
          <%= form.label :time, '予約時間' %>
          <%= form.text_field :time, class: 'form-control', value: @time, readonly: true %>
        </div>
        <div class="time form-group">
          <p>ご希望のコースを選択してください。</p>          
          <%= form.radio_button :menu, "リフレクソロジー/60分" %>
          <%= form.label :menu, "リフレクソロジー/60分", {value: "リフレクソロジー/60分", style: "display: inline-block;"} %><br>
          <%= form.radio_button :menu, "ボディコース/60分" %>
          <%= form.label :menu, "ボディコース/60分", {value: "ボディコース/60分", style: "display: inline-block;"} %><br>          
          <%= form.radio_button :menu, "リンパアロマコース/60分" %>
          <%= form.label :menu, "リンパアロマコース/60分", {value: "リンパアロマコース/60分", style: "display: inline-block;"} %><br>          
          <%= form.radio_button :menu, "カウンセリングコース/60分" %>
          <%= form.label :menu, "カウンセリングコース/60分", {value: "カウンセリングコース/60分", style: "display: inline-block;"} %>
        </div>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.hidden_field :start_time, value: @start_time %>
        <div class="submit">
          <%= form.submit value: '予約する', class: 'btn btn-primary mx-auto d-block' %>
        </div>
      <% end %>
      <div class="col-12 text-right">
        <%= link_to '戻る', reservations_path %>
      </div>
      </div>
    </div>
  </div>
</div>