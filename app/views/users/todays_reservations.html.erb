<% provide(:title, "todays_reservations") %>
<h1>本日のご予約</h1> 
  <div>
  <table class="table table-bordered table-condensed base-table" %>
    <thead>
      <tr>
        <th>お客様氏名</th>
        <th>予約時間</th>
        <th>予約コース</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <% user.reservations.each do |user_reservation| %>
          <% if Date.current == user_reservation.day %>
          <tr>
            <td><%= user.name %>様</td>
            <td><%= user_reservation.time %></td>
            <td><%= user_reservation.menu %></td>
          </tr>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
